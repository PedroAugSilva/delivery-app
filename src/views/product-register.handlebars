<main class="h-screen w-screen grid place-items-center bg-zinc-300">
    <div class="max-h-[880px] w-[1420px] pl-7 pr-7 pb-7 bg-white rounded-2xl shadow-md shadow-zinc-500">
        <h1 class="pt-4 text-center text-2xl font-semibold text-gray-700">
            Adicionar Produto
        </h1>
        <form action="" class="flex flex-row w-full h-[810px]">
            <div class="h-full w-[38%] grid place-items-center">
                {{!-- Image Preview --}}
                <div class="w-[490px] h-[490px]  border-2 border-[#FF8400] rounded-[10px]">
                </div>
                <span>Choose Image</span>
            </div>
            <div class="h-full w-[62%] flex flex-col mt-20 gap-1 mx-2 transition duration-300">
                Nome
                <input class="text-xl p-2 border-2 border-gray-300 focus:border-[#FF8400] rounded-[5px] outline-none"
                    type="text" name="" id="" placeholder="Nome do Produto">
                Descição
                <textarea class="text-xl p-2 border-2 border-gray-300 focus:border-[#FF8400] rounded-[5px] outline-none"
                    name="" id="" cols="30" rows="10"></textarea>
                <div class="mt-10 grid grid-cols-2 grid-rows-2">
                    <div class="flex flex-col">
                        Preço
                        <input
                            class="w-80 text-xl p-2 border-2 border-gray-300 focus:border-[#FF8400] rounded-[5px] outline-none"
                            type="number" name="" id="" placeholder="R$: 0,0">
                    </div>
                    <div class="flex flex-col">
                        Estoque
                        <input
                            class="w-80 text-xl p-2 border-2 border-gray-300 focus:border-[#FF8400] rounded-[5px] outline-none"
                            type="number" name="" id="" placeholder="0">
                    </div>
                </div>
                <button class="bg-[#FF8400] right-0 w-36 text-xl p-2 rounded-[6px] ">
                    Adicionar
                </button>
            </div>
        </form>
        <form action=""></form>
    </div>
</main>